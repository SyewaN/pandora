{
  "name": "obruk-iot-platform",
  "version": "1.0.0",
  "description": "ESP32 tabanli tarim izleme ve LSTM tahmin sistemi",
  "main": "backend/src/server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development node backend/src/server.js",
    "start": "NODE_ENV=production node backend/src/server.js",
    "train:ai": "python3 ai/train.py",
    "ai": "python3 ai/app.py",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:reload": "pm2 reload ecosystem.config.js --env production",
    "pm2:stop": "pm2 delete ecosystem.config.js"
  },
  "keywords": [
    "iot",
    "esp32",
    "lstm",
    "agriculture",
    "express",
    "flask"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.8.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.17.0"
  }
}
